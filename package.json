{
  "name": "responsive-portfolio",
  "version": "1.0.0",
  "description": "a rebuild of my site",
  "main": "scripts.js",
  "scripts": {
    "scss": "node-sass --output-stlye compressed scss/styles.scss public/styles.css",
    "autoprefixer": "postcss -u autoprefixer -r public/styles.css",
    "browserify": "browserify js/*.js -d -o public/scripts.js",
    "uglify": "uglifyjs public/scripts.js -m -c -o public/scripts.js",
    "lint": "eslint js",
    "imagemin": "imagemin img public/img",
    "font:copy": "cp font/*.* public/font/",
    "htmlminifier": "html-minifier --case-sensitive index.html -o public/index.html",
    "build:html": "npm run font:copy && npm run htmlminifier && npm run imagemin",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run browserify && npm run uglify",
    "build": "npm run build:html & npm run build:css && npm run build:js",
    "watch:html": "onchange '*.html' -- npm run build:html",
    "watch:css": "onchange 'scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'js/*.js' -- npm run build:js",
    "watch": "parallelshell 'npm run watch:html' 'npm run watch:css' 'npm run watch:js'",
    "ac": "git add --all && git commit -m",
    "push": "git push origin master && git status",
    "pull": "git pull origin master && git status"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jstrother/responsive-portfolio.git"
  },
  "author": "Jim Strother",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jstrother/responsive-portfolio/issues"
  },
  "homepage": "https://github.com/jstrother/responsive-portfolio#readme",
  "dependencies": {
    "jquery": "^3.1.0",
    "velocity-animate": "^1.2.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.1",
    "browserify": "^13.1.0",
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "html-minifier": "^3.0.2",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^3.9.0",
    "normalize-scss": "^5.0.3",
    "onchange": "^3.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "support-for": "^1.0.6",
    "uglify-js": "^2.7.3"
  }
}
